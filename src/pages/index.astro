---
import Layout from '../layouts/Layout.astro';

// Get all blog posts and sort them by date
const posts = await Astro.glob('./blog/*.md');
const sortedPosts = posts.sort((a, b) => 
	new Date(b.frontmatter.pubDate).getTime() - new Date(a.frontmatter.pubDate).getTime()
);
// Get the latest 3 posts
const latestPosts = sortedPosts.slice(0, 3);
---

<Layout title="Home | My Blog">
	<section class="hero">
		<h1>Some thoughts from Scott</h1>
		<p>A space for thoughts, ideas, and discoveries.</p>
	</section>

	<section class="featured">
		<h2>Latest Posts</h2>
		<div class="post-grid">
			{latestPosts.map(post => (
				<article class="post-card">
					<h3>
						<a href={post.url}>{post.frontmatter.title}</a>
					</h3>
					<div class="post-metadata">
						{post.frontmatter.pubDate && (
							<time datetime={new Date(post.frontmatter.pubDate).toISOString()}>
								{new Date(post.frontmatter.pubDate).toLocaleDateString('en-US', {
									year: 'numeric',
									month: 'long',
									day: 'numeric'
								})}
							</time>
						)}
					</div>
					{post.frontmatter.description && (
						<p class="description">{post.frontmatter.description}</p>
					)}
					<a href={post.url} class="read-more">Read More</a>
				</article>
			))}
		</div>
		<div class="view-all">
			<a href="/blog" class="view-all-link">View All Posts</a>
		</div>
	</section>
</Layout>

<style>
	@property --myColor1 {
		syntax: '<color>';
		initial-value: rgba(223, 236, 255, 1);
		inherits: false;
	}

	@property --myColor2 {
		syntax: '<color>';
		initial-value: rgba(91, 124, 153, 1);
		inherits: false;
	}
	
	h1, h2, h3, h4, h5, h6, time {
		font-family: 'Montserrat Variable', sans-serif;
		font-weight: 900;
		font-variation-settings: 'wght' 900;
	}

	h1 {
		color: white;
	}

	p, time, a {
		font-family: 'Montserrat Variable', sans-serif;
		font-weight: 400;
		font-variation-settings: 'wght' 500;
	}

	h3 a {
		font-family: 'Montserrat Variable', sans-serif;
		font-weight: 900;
		font-variation-settings: 'wght' 700;
		text-decoration: none;
		color: #1b1928;
		font-size: 2rem;
	}

	article.post-card {
		padding: 2rem;
		background-color: #e3dfdf;
		margin-bottom: 2rem;
		position: relative;
		background: #DFECFF;
		border-radius: 30px;
		background: linear-gradient(90deg, var(--myColor1) 0%, var(--myColor2) 100%);
		transition: --myColor1 1s, --myColor2 1s, border-radius 1s;
		&:hover {
			--myColor1: rgba(91, 124, 153, 1);
			--myColor2: rgba(223, 236, 255, 1);
			border-radius: 0;
		}
		
	}

	.read-more {
		transform: rotate(-90deg);
		display: inline-block;
		transform-origin: right center;
		font-size: 1.2rem;
		font-family: 'Montserrat Variable', sans-serif;
		font-weight: 900;
		font-variation-settings: 'wght' 900;
		text-decoration: none;
		color: #1b1928;
		position: absolute;
		right: 30px;
		top: 21%;
	}

	
</style>
