---
import Layout from '../../layouts/Layout.astro';

const posts = await Astro.glob('./*.md');
posts.sort((a, b) => new Date(b.frontmatter.pubDate).getTime() - new Date(a.frontmatter.pubDate).getTime());
---

<Layout title="Blog | My Blog" description="Read my latest blog posts">
  <section class="blog-index">
    <h1>Blog Posts</h1>
    <div class="posts">
      {posts.map(post => (
        <article class="post-preview">
          <h2>
            <a href={post.url}>{post.frontmatter.title}</a>
          </h2>
          <div class="metadata">
            {post.frontmatter.pubDate && (
              <time datetime={new Date(post.frontmatter.pubDate).toISOString()}>
                {new Date(post.frontmatter.pubDate).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
            )}
            {post.frontmatter.author && (
              <span class="author">by {post.frontmatter.author}</span>
            )}
          </div>
          {post.frontmatter.description && (
            <p class="description">{post.frontmatter.description}</p>
          )}
        </article>
      ))}
    </div>
  </section>
</Layout>

<style>
  .blog-index {
    max-width: 800px;
    margin: 0 auto;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 3rem;
  }

  .posts {
    display: grid;
    gap: 3rem;
  }

  .post-preview {
    border-bottom: 1px solid #eee;
    padding-bottom: 2rem;
  }

  .post-preview:last-child {
    border-bottom: none;
  }

  h2 {
    font-size: 1.8rem;
    margin-bottom: 0.5rem;
  }

  h2 a {
    color: var(--text-color);
    text-decoration: none;
  }

  h2 a:hover {
    color: var(--accent-color);
  }

  .metadata {
    color: #666;
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .author {
    margin-left: 1rem;
  }

  .description {
    color: #444;
    line-height: 1.6;
  }
</style> 